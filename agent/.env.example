# OpenEMR AI Agent — Environment Variables
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# --- OpenEMR connection ---
# Base URL of your OpenEMR instance (local Docker uses https://localhost:9300)
OPENEMR_BASE_URL=https://localhost:9300

# OAuth2 client credentials (obtained by registering with OpenEMR — see Step 2)
OPENEMR_CLIENT_ID=
OPENEMR_CLIENT_SECRET=

# OpenEMR site name (default installation uses "default")
OPENEMR_SITE=default

# --- Anthropic (Claude LLM) ---
# Get your API key at https://console.anthropic.com/
ANTHROPIC_API_KEY=

# --- LangSmith observability (optional, but recommended) ---
# Get your API key at https://smith.langchain.com/
# When LANGCHAIN_TRACING_V2=true, every agent step is recorded for debugging
LANGCHAIN_API_KEY=
LANGCHAIN_TRACING_V2=false
